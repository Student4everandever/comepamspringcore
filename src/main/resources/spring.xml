<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="loggers.xml"/>

    <bean id="client" class="spring_core.Client">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="John Smith"/>
        <property name="greetings" value="Hello there!"/>
    </bean>

    <bean id="event" class="spring_core.Event" scope="prototype">

        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="app" class="spring_core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileLogger"/>
        <constructor-arg>
            <map>
                <entry key="INFO" value-ref="consoleEventLogger"/>
                <entry key="ERROR" value-ref="combinedEventLogger"/>
            </map>
        </constructor-arg>
        <constructor-arg name="count" value="5"/>
    </bean>
</beans>