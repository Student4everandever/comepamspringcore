<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleEventLogger" class="spring_core.loggers.ConsoleEventLogger"/>

    <bean id="fileLogger" class="spring_core.loggers.FileEventLogger" init-method="init">
        <constructor-arg type="java.lang.String" value="LogFromSpring.txt"/>
    </bean>

    <bean id="cacheFileLogger" class="spring_core.loggers.CacheFileEventLogger" parent="fileLogger" destroy-method="destroy">
        <constructor-arg value="4"/>
    </bean>

    <bean id="combinedEventLogger" class="spring_core.loggers.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger" />
                <ref bean="fileLogger" />
            </list>
        </constructor-arg>
    </bean>

</beans>